# ═══════════════════════════════════════════════════════════════════════
# MesaYa Microservices - Environment Variables
# ═══════════════════════════════════════════════════════════════════════

# ───────────────────────────────────────────────────────────────
# PostgreSQL (una instancia, dos bases de datos lógicas)
# ───────────────────────────────────────────────────────────────
POSTGRES_USER=mesaya
POSTGRES_PASSWORD=mesaya_secret

# ───────────────────────────────────────────────────────────────
# RabbitMQ
# ───────────────────────────────────────────────────────────────
RABBITMQ_USER=mesaya
RABBITMQ_PASS=mesaya_secret
RABBITMQ_URL=amqp://mesaya:mesaya_secret@rabbitmq:5672

# ───────────────────────────────────────────────────────────────
# Redis
# ───────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379

# ───────────────────────────────────────────────────────────────
# JWT (usado por el Gateway para validar tokens)
# ───────────────────────────────────────────────────────────────
JWT_SECRET=change-this-super-long-secret-key
JWT_EXPIRES_IN=1d

# ───────────────────────────────────────────────────────────────
# Gateway
# ───────────────────────────────────────────────────────────────
GATEWAY_PORT=3000

# ───────────────────────────────────────────────────────────────
# Microservicio Tables (db_mesas)
# ───────────────────────────────────────────────────────────────
MS_TABLES_DB_HOST=postgres
MS_TABLES_DB_PORT=5432
MS_TABLES_DB_NAME=db_mesas
MS_TABLES_DB_USER=mesaya
MS_TABLES_DB_PASSWORD=mesaya_secret

# ───────────────────────────────────────────────────────────────
# Microservicio Reservations (db_reservas)
# ───────────────────────────────────────────────────────────────
MS_RESERVATIONS_DB_HOST=postgres
MS_RESERVATIONS_DB_PORT=5432
MS_RESERVATIONS_DB_NAME=db_reservas
MS_RESERVATIONS_DB_USER=mesaya
MS_RESERVATIONS_DB_PASSWORD=mesaya_secret

# ───────────────────────────────────────────────────────────────
# Idempotencia (TTL en segundos para Redis)
# ───────────────────────────────────────────────────────────────
IDEMPOTENCY_TTL_SECONDS=86400
